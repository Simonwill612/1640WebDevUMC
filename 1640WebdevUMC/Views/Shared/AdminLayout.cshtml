<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ADMIN</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="imgg/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="libb/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="libb/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="csss/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="csss/style.css" rel="stylesheet">
    <link href="csss/responsive.css" rel="stylesheet">
</head>
<body>
    <div class=" position-relative d-flex p-0" style="margin-bottom: 90px;">
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="AdminDashboard" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>ADMIN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                </div>
                <div class="navbar-nav w-100">
                    <a href="AdminDashboard" class="nav-item nav-link  "><i class="fa fa-th me-2"></i>Accounts</a>
                    <a href="Faculties" class="nav-item nav-link  "><i class="fa fa-book me-2"></i>Faculties</a>
                    <a href="AcademicYears" class="nav-item nav-link    "><i class="fa fa-table me-2"></i>Dealine</a>
                </div>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style=" margin-right: 30px">Hello <span style=" color:#26abff; font-weight:700;">@User.Identity?.Name!</span></a>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-primary">Logout</button>
                </form>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content" style="padding-left: 60px;">
            <!-- Navbar Start -->
            <!-- Navbar End -->
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <div class="fixed-bottom w-100 px-4 p-2 sidebar-mobile" style="background-color: #000;">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style=" margin-right: 30px; color:#fff;">Hello <span style=" color:#26abff; font-weight:700;">@User.Identity?.Name!</span></a>
            <div class="d-flex  justify-content-between align-items-center">
                <a class="navbar-mobile  box-radius" href="AdminDashboard"><i class="fa fa-th"></i></a>
                <a class="navbar-mobile box-radius" href="Faculties"><i class="fa fa-book"></i></a>
                <a class="navbar-mobile box-radius" href="AcademicYears"><i class="fa fa-table"></i></a>
                <!-- Replace the Logout button with an icon -->
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-link navbar-mobile  box-radius"><i class="fa fa-sign-out-alt"></i></button>
                </form>
            </div>
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="libb/chart/chart.min.js"></script>
    <script src="libb/easing/easing.min.js"></script>
    <script src="libb/waypoints/waypoints.min.js"></script>
    <script src="libb/owlcarousel/owl.carousel.min.js"></script>
    <script src="libb/tempusdominus/js/moment.min.js"></script>
    <script src="libb/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="libb/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="jss/main.js"></script>
</body>
</html>