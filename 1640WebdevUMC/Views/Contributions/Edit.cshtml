@model _1640WebDevUMC.Models.Contribution

@{
    ViewData["Title"] = "Edit";
}


<style>
    .emailconfirm {
        display: flex;
        gap: 30px;
    }
    /* Định dạng chung cho form */
    form {
        max-width: 400px;
        border-radius: 10px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 100px;
    }

        /* Định dạng cho các nhãn và ô input */
        form div {
            margin-bottom: 15px;
        }


        form label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        form input[type="text"],
        form input[type="password"],
        form select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Định dạng cho các nút */

        /* Định dạng cho nút quay lại */
        form div a {
            display: inline-block;
            background-color: #f44336;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
        }

            form div a:hover {
                background-color: #d32f2f;
            }

    /* Định dạng cho các thông báo lỗi */
    span.field-validation-error {
        color: #d9534f;
    }

    /* Định dạng cho các select box */
    form select {
        height: auto;
    }

    /* Định dạng cho các div chứa nút và select */
    form div:nth-last-child(-n+2) {
        text-align: right;
    }

    /* Định dạng cho thẻ h2 */
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    /* Định dạng cho thẻ div chứa nút quay lại */
    div a {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .button-flex {
        display: flex;
        justify-content: space-between;
    }

    h3 {
        text-align: center;
    }
</style>


        <form asp-action="Edit">
    <h3> Edit Contribution</h3>
        <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContributionID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <select asp-for="Email" class="form-control" asp-items="ViewBag.Email"></select>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcademicYearID" class="control-label"></label>
                <select asp-for="AcademicYearID" class="form-control" asp-items="ViewBag.AcademicYearID"></select>
                <span asp-validation-for="AcademicYearID" class="text-danger"></span>
            </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="IsPublic" asp-for="IsPublic">
            <label class="form-check-label" for="IsPublic">Is Public?</label>
        </div>
    <div class="button-flex">
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
        <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
