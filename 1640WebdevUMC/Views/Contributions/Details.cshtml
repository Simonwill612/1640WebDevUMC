@model _1640WebDevUMC.Models.Contribution


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Contribution</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear.AcademicYearID)
        </dd>
        <dt class="col-sm-2">
            Files
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Submission Time</th>
                        <th>PDF File</th>
                        <th>Image File</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.FilePath)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => model.StudentEmail)</td>
                            <td>@DateTime.Now</td> <!-- Replace with actual submission time -->
                            <td>@(System.IO.Path.GetExtension(file) == ".pdf" ? $"<a href='@Url.Content(file)'>@(System.IO.Path.GetFileName(file))</a>" : "")</td>
                            <td>@(System.IO.Path.GetExtension(file) == ".png" ? $"<a href='@Url.Content(file)'>@(System.IO.Path.GetFileName(file))</a>" : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ContributionID">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <a href="path_to_your_file" download>
        <button>Download</button>
    </a>

</div>

