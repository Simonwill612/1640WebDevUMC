@model _1640WebDevUMC.Models.UserViewModel
<style>
    .emailconfirm {
        display: flex;
        gap: 30px;
    }
    /* Định dạng chung cho form */
    form {
        max-width: 400px;
        border-radius: 10px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 100px;
    }

        /* Định dạng cho các nhãn và ô input */
        form div {
            margin-bottom: 15px;
        }


        form label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        form input[type="text"],
        form input[type="password"],
        form select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Định dạng cho các nút */

        /* Định dạng cho nút quay lại */
        form div a {
            display: inline-block;
            background-color: #f44336;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
        }

            form div a:hover {
                background-color: #d32f2f;
            }

    /* Định dạng cho các thông báo lỗi */
    span.field-validation-error {
        color: #d9534f;
    }

    /* Định dạng cho các select box */
    form select {
        height: auto;
    }

    /* Định dạng cho các div chứa nút và select */
    form div:nth-last-child(-n+2) {
        text-align: right;
    }

    /* Định dạng cho thẻ h2 */
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    /* Định dạng cho thẻ div chứa nút quay lại */
    div a {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .button-flex {
        display: flex;
        justify-content: space-between;
    }
</style>
<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>

    <div>
        <label asp-for="EmailConfirmed"></label>
        <input asp-for="EmailConfirmed" type="checkbox" />
    </div>

    <div>
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" type="password" />
    </div>

    <div>
        <label>Roles</label>
        @foreach (var role in Model.AllRoles)
        {
            <div>
                <input type="checkbox" name="Roles" value="@role" @(Model.Roles.Contains(role) ? "checked" : "") />
                <label>@role</label>
            </div>
        }
    </div>

    <div>
        <label>Faculties</label>
        @foreach (var faculty in Model.AllFaculties)
        {
            <div>
                <input type="checkbox" name="Faculties" value="@faculty" @(Model.Faculties.Contains(faculty) ? "checked" : "") />
                <label>@faculty</label>
            </div>
        }
    </div>

    <button type="submit">Save</button>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
