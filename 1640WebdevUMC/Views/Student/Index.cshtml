@model IEnumerable<_1640WebDevUMC.Models.Contribution>

@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/Navbar_Layout.cshtml";
    var currentUserEmail = User.Identity.Name; // Lấy email của người dùng hiện tại
}

<body>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p> <a href="https://www.gre.ac.uk/">University of Greenwich</a></p>
    </div>

    <div class="container mt-5">
        <h1>Contributions</h1>

        @foreach (var contribution in Model)
        {
            <div class="card my-4">
                <div class="card-body">
                    <h2>@contribution.Title</h2>
                    <p>@contribution.Content</p>
                    <p><strong>Faculty ID:</strong> @contribution.AcademicYear.FacultyID</p>
                    <p><strong>Faculty Name:</strong> @contribution.AcademicYear.Faculty.FacultyName</p>
                    <p><strong>Email:</strong> @contribution.ApplicationUser.Email</p>
                    <p><strong>Start Date:</strong> @contribution.AcademicYear.UploadDate</p>
                    <p><strong>Closed Date:</strong> @contribution.AcademicYear.ClosureDate</p>
                    <p><strong>Final Closed Date:</strong> @contribution.AcademicYear.FinalClosureDate</p>

                    <div>
                        @foreach (var file in contribution.Files.Where(f => f.StudentEmail == currentUserEmail))
                        {
                            <div>
                                <h2>@file.FileName</h2>
                                <p><a href="@file.FilePath">Download</a></p>
                                <form asp-action="DeleteFile" method="post">
                                    <input type="hidden" name="fileId" value="@file.FileID" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        }
                    </div>

                    <div class="mt-3">
                        <a asp-action="Upload" asp-route-id="@contribution.ContributionID" class="btn btn-primary">Upload</a>
                    </div>

                    <hr />

                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="contributionId" value="@contribution.ContributionID" />
                        <textarea name="content" placeholder="Your comment" class="form-control"></textarea>
                        <button type="submit" class="btn btn-success mt-2">Add comment</button>
                    </form>

                    <!-- Hiển thị comments -->
                    <h3 class="mt-4">Comments:</h3>
                    @if (contribution.Comments != null && contribution.Comments.Any())
                    {
                        foreach (var comment in contribution.Comments)
                        {
                            <div class="card my-3">
                                <div class="card-body">
                                    <p><strong>Comment ID:</strong> @comment.CommentID</p>
                                    <p><strong>Content:</strong> @comment.Content</p>
                                    <p><strong>Comment Date:</strong> @comment.CommentDate</p>
                                    <p><strong>Email:</strong> @comment.ApplicationUser.Email</p>
                                    <p><strong>Contribution ID:</strong> @comment.ContributionID</p>
                                    <form asp-action="DeleteComment" method="post">
                                        <input type="hidden" name="commentId" value="@comment.CommentID" />
                                        <button type="submit" class="btn btn-danger">Delete comment</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No comments available.</p>
                    }
                </div>
            </div>
        }
    </div>

    <div class="container-fluid p-0 mb-5">
        <div class="owl-carousel header-carousel position-relative">
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="~/img/bg-1.jpg" alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-sm-10 col-lg-8">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="~/img/bg-2.jpg" alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-sm-10 col-lg-8">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
