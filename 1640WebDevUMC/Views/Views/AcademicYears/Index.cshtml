@model IEnumerable<_1640WebDevUMC.Models.AcademicYear>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        .btn-danger {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                color: #fff;
                background-color: #c82333;
                border-color: #bd2130;
            }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f8f9fa;
        }

        .action-column {
            width: 100px;
        }

        .tag-a{
            color:white;
        }

        .tag-a:hover {
            color: white;
        }
    </style>
</head>
<body>

    <h1 style="margin-left: -46px;" >Management Course</h1>
        <p>
        <a href="/Academicyears/create" class="btn btn-primary" style="margin-left: -44px;">Create new course</a>
        </p>

    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4" style="margin-left: -68px;">
            <div class="d-flex align-items-center justify-content-between mb-4">

            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">START DEALINE</th>
                            <th scope="col">CLOSE DEALINE</th>
                            <th scope="col">FINAL COLSE DEALINE</th>
                            <th scope="col">COURES</th>
                            <th scope="col">FACULTY</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UploadDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClosureDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FinalClosureDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Faculty.FacultyID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Faculty.FacultyName)
                                </td>
                                <td>
                                    <button class="btn btn-danger"><a class="tag-a" asp-action="Edit" asp-route-id="@item.AcademicYearID">Edit</a></button>
                                    <button class="btn btn-danger"><a class="tag-a" asp-action="Details" asp-route-id="@item.AcademicYearID">Details</a></button>
                                    <button class="btn btn-danger"><a class="tag-a" asp-action="Delete" asp-route-id="@item.AcademicYearID">Delete</a></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

