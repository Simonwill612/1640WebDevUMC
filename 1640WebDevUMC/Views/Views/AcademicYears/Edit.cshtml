@model _1640WebDevUMC.Models.AcademicYear

@{
    ViewData["Title"] = "Edit";
}

<style>
    .emailconfirm {
        display: flex;
        gap: 30px;
    }
    /* Định dạng chung cho form */
    form {
        max-width: 400px;
        border-radius: 10px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 100px;
    }

        /* Định dạng cho các nhãn và ô input */
        form div {
            margin-bottom: 15px;
        }


        form label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        form input[type="text"],
        form input[type="password"],
        form select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Định dạng cho các nút */

        /* Định dạng cho nút quay lại */
        form div a {
            display: inline-block;
            background-color: #f44336;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
        }

            form div a:hover {
                background-color: #d32f2f;
            }

    /* Định dạng cho các thông báo lỗi */
    span.field-validation-error {
        color: #d9534f;
    }

    /* Định dạng cho các select box */
    form select {
        height: auto;
    }

    /* Định dạng cho các div chứa nút và select */
    form div:nth-last-child(-n+2) {
        text-align: right;
    }

    /* Định dạng cho thẻ h2 */
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    /* Định dạng cho thẻ div chứa nút quay lại */
    div a {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .button-flex {
        display: flex;
        justify-content: space-between;
    }

    h3 {
        text-align: center;
    }
</style>

        <form asp-action="Edit">
            <h3>Edit</h3>
    <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AcademicYearID" />
            <div class="form-group">
                <label asp-for="UploadDate" class="control-label"></label>
                <input asp-for="UploadDate" class="form-control" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosureDate" class="control-label"></label>
                <input asp-for="ClosureDate" class="form-control" />
                <span asp-validation-for="ClosureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalClosureDate" class="control-label"></label>
                <input asp-for="FinalClosureDate" class="form-control" />
                <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyID" class="control-label"></label>
                <select asp-for="FacultyID" class="form-control" asp-items="ViewBag.FacultyID"></select>
                <span asp-validation-for="FacultyID" class="text-danger"></span>
            </div>
    <div class="button-flex">
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
        <input type="submit" value="Save" class="btn btn-danger" />

            </div>
        </form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
