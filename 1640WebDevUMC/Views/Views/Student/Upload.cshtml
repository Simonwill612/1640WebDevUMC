@model _1640WebDevUMC.Models.Contribution

@{
    ViewData["Title"] = "Upload Files";
}

<style>
    .conatiner {
        margin-bottom: 20px;
    }

    .upload-box {
        font-size: 16px;
        background: white;
        border-radius: 50px;
        box-shadow: 0px 1px 3px black;
        width: 350px;
        outline: none;
    }

    ::-webkit-file-upload-button {
        color: white;
        background: #206a5d;
        padding: 20px;
        border: none;
        border-radius: 50px;
        box-shadow: 1px 0 1px 1px #6b4559;
        outline: none;
    }

    h1 {
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 25px;
        text-align: center;
    }

</style>
<h1>Upload Files</h1>

<form method="post" enctype="multipart/form-data" id="uploadForm">
    @Html.AntiForgeryToken()
    <div id="dropArea" class="drop-area">
        <input type="file" id="fileInput" name="files" multiple hidden>
    </div>
    <div class="form-group conatiner">
        <input type="file" class="upload-box" id="file1" name="files" multiple>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>