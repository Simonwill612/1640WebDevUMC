@model _1640WebDevUMC.Models.Contribution

@{
    ViewData["Title"] = " Details";
}

<style>
    table {
        border-collapse: collapse;
    }

    th {
        background: #ccc;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 8px;
    }

    thead {
        background: #4992ff;
    }

    tr:nth-child(even) {
        background: #efefef;
    }

    tr:hover {
        background: #d1d1d1;
    }

    .comments-box {
        border: 1px solid #ccc;
        padding: 20px;
        margin: 20px 0;
        border-radius: 5px;
    }

    .file-comments {
        margin-bottom: 20px;
    }

        .file-comments h4 {
            margin-top: 0;
        }

        .file-comments ul {
            list-style: none;
            padding: 0;
        }

        .file-comments li {
            margin-bottom: 10px;
        }

    .comment-content {
        font-size: 16px;
        color: #333;
        font-weight: 900;
    }

    .comment-date {
        font-size: 12px;
        color: #999;
    }
</style>

<h1>@ViewData["Title"]</h1>
<p>@Model.Content</p>

<hr />

<h3>Uploaded Files</h3>
@if (Model.Files.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Uploader Email</th>
                <th>Upload Title</th>
                <th>File Name</th>
                <th>Upload Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.Files)
            {
                <tr>
                    <td>@file.StudentEmail</td>
                    <td>@file.UploadTitle</td>
                    <td>@file.FileName</td>
                    <td>@file.UploadTime</td>
                    <td>
                        <a class="btn btn-danger" asp-action="DownloadFile" asp-route-id="@file.FileID">Download</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No files uploaded.</p>
}

<div class="comments-box">
    <h3>Coordinator Comments</h3>
    @if (Model.Comments.Any(c => !c.IsPublic))
    {
        <ul>
            @foreach (var comment in Model.Comments.Where(c => !c.IsPublic))
            {
                <li>
                    <p><strong>Email:</strong> @comment.ApplicationUser.Email</p>
                    <p><strong>File Upload by Student:</strong> @comment.File.StudentEmail</p>
                    <p><strong>Content:</strong> @comment.Content</p>
                    <div class="comment-date">@comment.CommentDate</div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No Coordinator comments.</p>
    }
</div>


<div class="comments-box">
    <h3>Public Comments</h3>
    @if (Model.Comments.Any(c => c.IsPublic))
    {
        <ul>
            @foreach (var comment in Model.Comments.Where(c => c.IsPublic))
            {
                <li>
                    <p><strong>Email:</strong> @comment.ApplicationUser.Email</p>
                    <p><strong>File Name:</strong> @comment.File.FileName</p>
                    <p><strong>Content:</strong> @comment.Content</p>
                    <div class="comment-date">@comment.CommentDate</div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.Identity.Name == comment.ApplicationUser.Email)
                        {

                        }
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p>No public comments.</p>
    }
</div>



<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
