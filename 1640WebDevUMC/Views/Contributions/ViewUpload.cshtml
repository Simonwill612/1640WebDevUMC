@model _1640WebDevUMC.Models.ContributionWithFile

@{
    ViewData["Title"] = "View Uploads";
}

<h1>View Uploads</h1>

<p><strong>Contribution ID:</strong> @Model.ContributionID</p>
<p><strong>Title:</strong> @Model.Title</p>

@if (Model.FilePaths != null && Model.FilePaths.Any())
{
    <h2>Uploaded Files:</h2>
    <ul>
        @foreach (var filePath in Model.FilePaths)
        {
            <li>
                <a href="@Url.Content("~/" + filePath)" download>@System.IO.Path.GetFileName(filePath)</a>
            </li>
        }
    </ul>
}
else
{
    <p>No files uploaded for this contribution.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
